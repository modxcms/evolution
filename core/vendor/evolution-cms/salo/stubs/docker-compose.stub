# For more information: https://laravel.com/docs/salo
version: '3'
services:
    evo.php:
        build:
            context: core/vendor/evolution-cms/salo/runtimes/8.0
            dockerfile: Dockerfile
            args:
                WWWGROUP: '${WWWGROUP}'
        image: php:8.0-apache
        ports:
            - '${APP_PORT:-80}:80'
        environment:
            WWWUSER: '${WWWUSER}'
            LARAVEL_SALO: 1
        volumes:
            - '.:/var/www/html'
        networks:
            - salo
{{depends}}
{{services}}
networks:
    salo:
        driver: bridge
{{volumes}}
